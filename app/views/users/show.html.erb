<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>
<body>
  <div class="main-container">
    <div class="row justify-content-center">
      <div class="your-bookings">
        <h1>YOUR BOOKINGS</h1>
        <% @user.bookings.each do |booking|%>
          <div class="review-card">
            <%= cl_image_tag booking.kitten.photo, height: 200, width: 400 %>
            <h2> <%= booking.kitten.name.upcase %> </h2>
            <%= render 'reviews/form', kitten: booking.kitten, review: Review.new %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="your-kittens-container">
        <h1>YOUR KITTENS</h1>
        <% @user.kittens.each do |kitten|%>
          <div class="kitten-card-user">
            <%= cl_image_tag kitten.photo, height: 200, width: 400 %>
            <h2> <%= kitten.name.upcase %> </h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
