  <div class="main-container">
    <!-- <h1>PICK A KITTEN</h1> -->
    <div class="card-container">
      <% @kittens.each do |kitten| %>
        <div class="kitten-card">
          <%= cl_image_tag kitten.photo, height: 200, width: 400, dpr: 3.0, crop: :fill %>
            <div class="kitten-info-card">
              <h2><%= link_to kitten.name, kitten_path(kitten), class: "link-style"%></h2>
              <div class="inner-info">
                <div class= "d-flex kitten-description">
                  <i class="fas fa-cat"></i>
                  <p><%= kitten.description%></p>
                </div>
                <div class="d-flex">
                  <i class="fas fa-map-marker-alt"></i>
                  <p> <%= kitten.location %></p>
                </div>
              </div>
              <%= link_to kitten_path(kitten), method: :delete, data: { confirm: "Are you sure?"} do %>
              <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </div>
        </div>
      <% end %>
    </div>


    <div
      id="map"
      style="width: 50%;
      height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
    </div>

  </div>
